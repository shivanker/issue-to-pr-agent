{
  "name": "issue-to-pr-agent",
  "version": "1.0.0",
  "description": "GitHub App that creates pull requests in response to new issues",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --external:aws-sdk --format=cjs",
    "dev": "tsc -w",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts'",
    "test": "./test.sh",
    "test:local": "ts-node src/local-test.ts",
    "webhook": "ts-node src/webhook-server.ts"
  },
  "keywords": [
    "github",
    "github-app",
    "aws-lambda",
    "pull-request",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^7.6.1",
    "@types/node": "^22.13.9",
    "esbuild": "^0.25.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda": "^1.19.0",
    "@aws-sdk/client-lambda": "^3.758.0",
    "@octokit/rest": "^21.1.1",
    "@octokit/webhooks": "^13.7.4",
    "@octokit/webhooks-methods": "^5.1.1",
    "@types/express": "^5.0.0",
    "aws-xray-sdk": "^3.5.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "octokit": "^4.1.2",
    "simple-git": "^3.27.0"
  }
}
